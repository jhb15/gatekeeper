@page

@model IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                @ViewData["Title"]
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Email Address
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="text-right">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

