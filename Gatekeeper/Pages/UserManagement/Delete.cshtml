@page "{id}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete - User Management";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this User?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(Model => Model.UserToDelete.Email)
        </dt>
        <dd>
            @Html.DisplayFor(Model => Model.UserToDelete.Email)
        </dd>
    </dl>
    <form id="delete-form" method="post">
        <input type="hidden" asp-for="UserToDelete.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-default">Cancel</a>
    </form>
</div>